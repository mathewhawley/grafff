var app = angular.module('grafffApp', [
  'ngAnimate',
  'ngRoute',
  'ngResource'
]);

app.config(function($routeProvider){

  $routeProvider
  .when('/', {
    controller: 'HomeController',
    templateUrl: "<%= asset_path('index.html') %>"
  })
  .when('/second-page', {
    controller: 'HomeController',
    templateUrl: "<%= asset_path('second-page.html') %>"
  })
  .otherwise({
    redirectTo: '/'
  });

}); 