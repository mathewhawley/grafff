var app = angular.module('grafffApp', [
  'ngAnimate',
  'ngRoute',
  'ngResource',
  'ngMap',
  'angularMoment'
]);

app.config(['$routeProvider', function($routeProvider){

  $routeProvider
  .when('/', {
    controller: 'IndexController',
    templateUrl: "<%= asset_path('pages/home/index.html') %>"
  })
  .when('/artists', {
    controller: 'UserIndexController',
    templateUrl: "<%= asset_path('pages/user/index.html') %>"
  })
  .when('/users/:id', {
    controller: 'UserShowController',
    templateUrl: "<%= asset_path('pages/user/show.html') %>"
  })
  .when('/artworks', {
    controller: 'ArtworkIndexController',
    templateUrl: "<%= asset_path('pages/artwork/index.html') %>"
  })
  .when('/artworks/:id', {
    controller: 'ArtworkShowController',
    templateUrl: "<%= asset_path('pages/artwork/show.html') %>"
  })
  .when('/search', {
    controller: 'SearchResultsController',
    templateUrl: "<%= asset_path('pages/search/index.html') %>"
  })
  .otherwise({
    redirectTo: '/'
  });

}]);