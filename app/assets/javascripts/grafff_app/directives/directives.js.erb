app.directive('file', function() {
  return {
    restrict: 'AE',
    scope: {
      file: '@'
    },
    link: function(scope, el, attrs) {
      el.bind('change', function(event) {
        var files = event.target.files;
        var file = files[0];
        scope.file = file;
        scope.$parent.file = file;
        scope.$apply();
      });
    }
  };
});

app.directive('validFile', function() {
  return {
    require: 'ngModel',
    link: function(scope, element, attrs, ngModel) {
      element.bind('change', function() {
        scope.$apply(function() {
          ngModel.$setViewValue(element.val());
          ngModel.$render();
        });
      });
    }
  }
});

app.directive('datepickerPopup', function(SearchFactory, $timeout) {

  return {
    require: 'ngModel',
    link: function(scope, element, attrs, ngModel) {
      // Add nicer formatting to initial date/time display
      ngModel.$formatters.shift();
      // Watch for a date change on the datepicker
      scope.$watch(function() {
        return ngModel.$modelValue;
      }, function(newValue) {
        // Get artworks with corresponding date from database, repopulate map
        if(newValue) {
          SearchFactory.filterArtwork(newValue).then(function(response) {
            scope.mapArtwork = [];
            var iterator = 0;
            for (var i = 0; i < response.data.length; i++) {
              $timeout(function() {
                scope.mapArtwork.push(response.data[iterator++]);
              }, i * 100);
            }
          });
        }
      });
    }
  }

});

